<%- include('partials/header') %>
<div class="form-container">
<div class="row vdivide" style="margin-top:80px;">
    <div class="col-sm-6 text-center" style="margin-top:80px;"> <img src="images/logo.png" />
</div>
<div class="col-sm-4">

    <h2>Forgot Password?</h2>
<% if(locals.userexist) { %>
        <div class="alert alert-danger"><%= userexist %></div>
    <% } %>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="username">Email</label>
            <input type="text" name="username" id="username" value="<%= locals.username || '' %>" class="form-control" required />
        </div>
        <div class="form-group">
            <button type="resetlink" class="btn btn-primary">Email Reset Link</button>
		<a href="/login" class="btn btn-link">Cancel</a>
        </div>
    </form>
</div>
</div>
</div>
<%- include('partials/footer') %>
